<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/trackerDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <TextView
        android:id="@+id/mainDebugTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club:" />

    <Spinner
        android:id="@+id/trackerClubsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/trackerTeeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tee Shot" />

    <TextView
        android:id="@+id/clubStatDebugTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction:" />

    <Spinner
        android:id="@+id/trackerDirectionSpinner"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:entries="@array/FullShotDirections" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shape:" />

    <Spinner
        android:id="@+id/trackerShapeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/FullShotShapes" />

    <TextView
        android:id="@+id/standAloneTrackerShapeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surface:" />

    <Spinner
        android:id="@+id/trackerSurfaceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/FullShotSurfaces" />

</LinearLayout>